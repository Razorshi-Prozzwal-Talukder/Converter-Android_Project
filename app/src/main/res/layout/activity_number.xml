<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/bk2"
    tools:context=".Scale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/headtxtId12"
            android:textColor="#d9011d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONVERT NUMBER"
            android:textSize="23sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number : "
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:id="@+id/numberId"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/convertBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/headtxtId22"
            android:textColor="#d9011d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONVERT RESULT"
            android:textSize="23sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:textSize="18sp"
            android:textColor="#100000"
            android:id="@+id/resultViewId"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</LinearLayout>